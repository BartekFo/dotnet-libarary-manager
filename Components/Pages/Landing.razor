@page "/"
@using Microsoft.AspNetCore.Components.Web
@attribute [AllowAnonymous]
@inherits RedirectIfAuthenticated

<div class="landing-page">
    <div class="hero-section">
        <div class="hero-content">
            <h1>Welcome to Library Manager</h1>
            <p class="hero-text">Your personal library management solution. Organize, track, and discover books with
                ease.</p>
            <div class="cta-buttons">
                <a href="/Account/Login" class="btn btn-primary">Login</a>
                <a href="/Account/Register" class="btn btn-secondary">Register</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="images/hero.png" alt="Library books" />
        </div>
    </div>

    <div class="features-section">
        <div class="feature">
            <i class="fas fa-book"></i>
            <h3>Book Management</h3>
            <p>Easily add, edit, and organize your book collection</p>
        </div>
        <div class="feature">
            <i class="fas fa-search"></i>
            <h3>Quick Search</h3>
            <p>Find any book in your collection in seconds</p>
        </div>
        <div class="feature">
            <i class="fas fa-chart-line"></i>
            <h3>Reading Stats</h3>
            <p>Track your reading progress and habits</p>
        </div>
    </div>
</div>

<style>
    .landing-page {
        min-height: 100vh;
    }

    .hero-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 80vh;
    }

    .hero-content {
        flex: 1;
        max-width: 600px;
        padding: 2rem;
    }

    .hero-content h1 {
        font-size: 3rem;
        color: #2c3e50;
        margin-bottom: 1.5rem;
    }

    .hero-text {
        font-size: 1.2rem;
        color: #34495e;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .hero-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-image img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }

    .btn-secondary {
        background-color: #2ecc71;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #27ae60;
    }

    .features-section {
        display: flex;
        justify-content: space-around;
        padding: 4rem 2rem;
        background-color: white;
    }

    .feature {
        text-align: center;
        padding: 2rem;
        max-width: 300px;
    }

    .feature i {
        font-size: 2.5rem;
        color: #3498db;
        margin-bottom: 1rem;
    }

    .feature h3 {
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .feature p {
        color: #7f8c8d;
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .hero-section {
            flex-direction: column;
            text-align: center;
        }

        .hero-content {
            margin-bottom: 2rem;
        }

        .cta-buttons {
            justify-content: center;
        }

        .features-section {
            flex-direction: column;
            align-items: center;
        }
    }
</style>